<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/room.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <title>Movie Seat Booking</title>
  </head>
  <body>
    <div class="page">
      <div class="sidebar">
        <div class="logo_bar">
          <div class="logo_img"><img src="/images/logo.png" /></div>
        </div>
        <ul class="nav_list">
          <li>
            <a href="/index">
              <span class="links_name">Anasayfa</span>
            </a>
            <span class="tooltip">Anasayfa</span>
          </li>
          <li>
            <% if(loginn){ %>
            <a href="/profile">
              <span class="links_name">Profilim</span>
            </a>
            <span class="tooltip">Profilim</span>
            <% } %>
          </li>
          <li>
            <% if(role==2){ %>
            <a href="/dailyReport">
              <span class="links_name">Gün Listesi</span>
            </a>
            <span class="tooltip">Gün Listesi</span>
            <% } %>
          </li>
          <li>
            <% if(role==2){ %>
            <a href="/ownerPanel">
              <span class="links_name">Çalışan Paneli</span>
            </a>
            <span class="tooltip">Çalışan Paneli</span>
            <% } %>
          </li>
        </ul>
        <div class="profile_content">
          <div class="name">a</div>
          <div class="logout">
            <a href="/login" id="logout"
              ><i class="fa fa-sign-out" style="font-size: 20px"></i
            ></a>
          </div>
        </div>
      </div>
      <div class="homepage">
        <form class="form">
          <div class="genel">
            <div class="left_content">
              <ul class="table">
                <li class="table-header">
                  <div class="col col-1">Oda Tipi</div>
                  <div class="col col-2">Oda Adedi</div>
                  <div class="col col-3">Oda Kapasitesi</div>
                  <div class="col col-4">Tarih</div>
                  <div class="col col-5">Onayla</div>
                </li>
              </ul>
              <% if(rooms.length >0){%>
                <%rooms.forEach(room => { %>
              <ul class="table">
                <li class="table-row">
                  <div class="col col-1"><%=room.roomName%></div>
                  <div class="col col-2">1</div>
                  <div class="col col-3"><%=room.roomCapacity%></div>
                  <div class="col col-4"><%=room.reserveDate%></div>
                  <a href="/reserveroom/<%=room.room_id%>">Seç</a>
                </li>
              </ul>
              <% }) %> 
                    <% } %>  
            </div>
          </div>
          <div class="butns">
            <button class="continue"><a href="welcome">Geri Dön</a></button>
            <button class="continue"><a href="">Devam Et</a></button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
